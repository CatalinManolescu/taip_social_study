<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>taip.social</groupId>
    <version>0.1-SNAPSHOT</version>
    <artifactId>taip-parent</artifactId>
    <packaging>pom</packaging>
	
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.7</java.version>
        <maven.compiler.plugin.version>3.1</maven.compiler.plugin.version>
        <javax.servlet.version>2.5</javax.servlet.version>

        <!-- spring -->
        <org.springframework.version>4.0.4.RELEASE</org.springframework.version>
        <org.springsecurity.version>3.2.3.RELEASE</org.springsecurity.version>
        <org.springframework.data.jpa>1.5.2.RELEASE</org.springframework.data.jpa>

        <org.aspectj.version>1.7.3</org.aspectj.version>

        <!-- hibernate -->
        <hibernate.version>4.3.5.Final</hibernate.version>
        <hibernate.validator.version>4.3.1.Final</hibernate.validator.version>
        <hibernate.jpa.2.0.version>1.0.1.Final</hibernate.jpa.2.0.version>
        <hibernate.jpa.2.1.version>1.0.0.Final</hibernate.jpa.2.1.version>

        <!-- CFX -->
        <apache.cfx.version>2.7.12</apache.cfx.version>
        <jax-rs.version>2.0-m10</jax-rs.version>
        <jaxb.version>2.2.7</jaxb.version>

        <jackson.version>2.2.3</jackson.version>
        
        <!-- logging -->
        <slf4j.version>1.7.2</slf4j.version>
        <log4j.version>1.2.17</log4j.version>

        <!-- Unit testing -->
        <junit.version>4.11</junit.version>
    </properties>

    <modules>
        <module>taip-commons</module>
        <module>taip-domain</module>
        <module>taip-business</module>
        <module>taip-api</module>
    </modules>
    <build>
        <plugins>
            <!-- Maven compiler plugin -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.9</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>

        </pluginManagement>
    </build>

